      transition: all 0.3s ease;
    }

    .dark-mode-toggle:hover {
      background-color: #2c3e50;
      transform: scale(1.1);
    }

    /* Responsividade */
    @media (max-width: 768px) {
      header {
        flex-direction: column;
        padding: 1rem;
      }

      nav ul {
        margin-top: 1rem;
        justify-content: center;
        flex-wrap: wrap;
      }

      nav ul li {
        margin: 0.5rem;
      }

      .banner {
        padding: 3rem 1rem;
      }

      .filters-container {
        flex-direction: column;
        gap: 10px;
      }

      .filter-group {
        width: 100%;
      }

      .cards-grid {
        grid-template-columns: 1fr;
        gap: 20px;
      }

      .container {
        width: 95%;
        margin: 20px auto;
        padding: 20px;
      }

      .acessibilidade {
        top: 10px;
        right: 10px;
      }

      .dark-mode-toggle {
        bottom: 10px;
        right: 10px;
      }
    }
  </style>

</head>

