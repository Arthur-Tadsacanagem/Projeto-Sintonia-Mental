    document.addEventListener('DOMContentLoaded', function () {
      const grid = document.getElementById('cardsGrid');
      if (grid) {
        // L√≥gica de embaralhar cards
        for (let i = grid.children.length; i >= 0; i--) {
          grid.appendChild(grid.children[Math.random() * i | 0]);
        }
      }
    });

    function toggleDarkMode() {
      document.body.classList.toggle('dark-mode');
      const isDarkMode = document.body.classList.contains('dark-mode');
      localStorage.setItem('darkMode', isDarkMode);
      document.querySelector('.dark-mode-toggle').textContent = isDarkMode ? '‚òÄÔ∏è' : 'üåô';
    }

    if (localStorage.getItem('darkMode') === 'true') {
      document.body.classList.add('dark-mode');
      document.querySelector('.dark-mode-toggle').textContent = '‚òÄÔ∏è';
    }

    // Controle de tamanho de fonte
    let fontSize = 16;
    const aumentarFonteBtn = document.getElementById("aumentar-fonte");
    const diminuirFonteBtn = document.getElementById("diminuir-fonte");

    function ajustarFonte(tamanho) {
      document.querySelectorAll('body, h1, h2, p, label, select, input, textarea, button, a, .logo').forEach(el => {
        el.style.fontSize = `${tamanho}px`;
      });
      // Ajuste espec√≠fico para o banner h1 em telas pequenas, para evitar que quebre muito
      if (window.innerWidth <= 768) {
        document.querySelector('.banner h1').style.fontSize = `${Math.min(tamanho * 1.5, 36)}px`;
      }
    }

    aumentarFonteBtn.addEventListener("click", () => {
      if (fontSize < 22) {
        fontSize += 2;
        ajustarFonte(fontSize);
      }
    });

    diminuirFonteBtn.addEventListener("click", () => {
      if (fontSize > 12) {
        fontSize -= 2;
        ajustarFonte(fontSize);
      }
    });

    // L√≥gica de Filtro
    document.querySelector('.filter-button').addEventListener('click', function () {
      const specialty = document.getElementById('specialty').value.toLowerCase();
      const approach = document.getElementById('approach').value.toLowerCase();
      const modality = document.getElementById('modality').value.toLowerCase();
      const searchName = document.getElementById('searchName').value.toLowerCase();
      const cards = document.querySelectorAll('.psychologist-card');
      let visibleCount = 0;
      cards.forEach(card => {
        const info = card.querySelector('.card-info');
        const nome = card.querySelector('.psychologist-name').innerText.toLowerCase();
        // Incluindo as informa√ß√µes da parte de tr√°s do card para a filtragem
        const esp = info ? info.innerHTML.toLowerCase() : '';
        const show =
          (!specialty || esp.includes(specialty)) &&
          (!approach || esp.includes(approach)) &&
          (!modality || esp.includes(modality)) &&
          (!searchName || nome.includes(searchName));
        card.style.display = show ? 'block' : 'none';
        if (show) visibleCount++;
      });
      const cardsGrid = document.querySelector('.cards-grid');
      const msg = document.querySelector('.no-professionals-message');
      if (cardsGrid) {
        cardsGrid.style.display = visibleCount > 0 ? 'grid' : 'none';
      }
      if (msg) {
        msg.style.display = visibleCount === 0 ? 'block' : 'none';
      }
    });

    // Fun√ß√£o de Girar o Card
    function toggleCard(button) {
      const card = button.closest('.psychologist-card');
      card.classList.toggle('flipped');
    }
