      max-width: 800px;
      margin: 0 auto;
      font-weight: 300;
      line-height: 1.6;
    }

    /* Container Principal - Aplica o efeito de cart√£o flutuante */
    .container {
      width: 95%;
      max-width: 1200px;
      margin: 40px auto;
      height: auto;
      box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15);
      border-radius: 15px;
      overflow: hidden;
      background: rgba(255, 255, 255, 0.9);
      backdrop-filter: blur(5px);
      border: 1px solid rgba(255, 255, 255, 0.2);
      transition: transform 0.3s ease, box-shadow 0.3s ease;
      padding: 30px;
    }

    .container:hover {
      transform: translateY(-5px);
      box-shadow: 0 15px 35px rgba(0, 0, 0, 0.2);
    }

    /* T√≠tulos de Se√ß√£o (section-title) */
    .section-title {
      text-align: center;
      margin-bottom: 40px;
      color: #2c3e50;
      font-weight: 600;
      position: relative;
      font-size: 2.2em;
      display: block;
    }

    .section-title::after {
      content: '';
      position: absolute;
      bottom: -10px;
      left: 50%;
      transform: translateX(-50%);
      width: 50px;
      height: 3px;
      background: linear-gradient(to right, #3a5a9f, #2980b9);
      border-radius: 3px;
    }

    /* Se√ß√£o de Filtros (filters-section) - Usando estilos de card */
