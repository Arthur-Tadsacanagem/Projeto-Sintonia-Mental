      background: linear-gradient(135deg, #2980b9 0%, #3a5a9f 100%);
    }

    /* Cart√µes de Psic√≥logos (Flip Cards) - Aplicando o estilo de card moderno */
    .cards-grid {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
      gap: 30px;
    }

    .psychologist-card {
      position: relative;
      width: 100%;
      height: 380px;
      perspective: 1000px;
      border-radius: 12px;
      transition: all 0.3s ease;
    }

    .psychologist-card:hover {
      box-shadow: 0 10px 25px rgba(0, 0, 0, 0.15);
      /* Sombra no hover para destaque */
    }

    .card-front,
    .card-info {
      position: absolute;
      width: 100%;
      height: 100%;
      backface-visibility: hidden;
      transition: transform 0.6s;
      background: white;
      border-radius: 12px;
      padding: 20px;
      box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: space-between;
      border: 1px solid rgba(0, 0, 0, 0.05);
    }

    .card-info {
      transform: rotateY(180deg);
      text-align: center;
      overflow-y: auto;
      align-items: flex-start;
      padding-top: 15px;
    }

    .psychologist-card.flipped .card-front {
      transform: rotateY(180deg);
    }

    .psychologist-card.flipped .card-info {
      transform: rotateY(0deg);
    }

    .profile-photo {
      width: 120px;
      height: 120px;
      border-radius: 50%;
      object-fit: cover;
      margin-bottom: 15px;
      border: 4px solid rgba(58, 90, 159, 0.3);
      box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
    }

    .card-front h3 {
      color: #2c3e50;
      font-size: 1.4em;
      margin-bottom: 10px;
    }

    .card-info h3 {
      color: #3a5a9f;
      font-size: 1.3em;
      margin-bottom: 10px;
      width: 100%;
      text-align: center;
    }

    .card-info p {
      text-align: left;
      width: 100%;
      margin-bottom: 8px;
      line-height: 1.4;
      font-size: 0.95em;
      color: #555;
    }

    .card-info p strong {
      color: #2c3e50;
      font-weight: 600;
    }

    /* Bot√µes dos Cards - Estilos de gradiente */
    .know-more-btn,
    .contact-btn {
      background: linear-gradient(135deg, #3a5a9f 0%, #2980b9 100%);
      color: white;
      border: none;
      width: 90%;
      padding: 10px 16px;
      border-radius: 8px;
      font-weight: 500;
      transition: all 0.3s ease;
      margin-top: 10px;
      cursor: pointer;
      font-size: 1em;
      text-decoration: none;
      text-align: center;
      display: block;
      margin-left: auto;
      margin-right: auto;
      box-shadow: 0 3px 8px rgba(0, 0, 0, 0.2);
    }

    .know-more-btn:hover,
    .contact-btn:hover {
      background: linear-gradient(135deg, #2980b9 0%, #3a5a9f 100%);
      transform: translateY(-1px);
    }

    .back-btn {
      background-color: #f44336;
      /* Vermelho para bot√£o de voltar */
      color: white;
      border: none;
      width: 90%;
      padding: 10px 16px;
      border-radius: 8px;
      font-weight: 500;
      transition: all 0.3s ease;
      margin-top: 10px;
      cursor: pointer;
      font-size: 1em;
      text-decoration: none;
      text-align: center;
      display: block;
      margin-left: auto;
      margin-right: auto;
      box-shadow: 0 3px 8px rgba(0, 0, 0, 0.2);
      margin-bottom: 15px;
    }

    .back-btn:hover {
      background-color: #d32f2f;
      transform: translateY(-1px);
    }

    /* Se√ß√£o Sobre N√≥s - Usando estilos de card moderno */
    .about-section {
      padding: 30px;
      border-radius: 12px;
      margin: 50px 0;
      background: white;
      box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
      border: 1px solid rgba(0, 0, 0, 0.05);
    }

    .about-section h2 {
      color: #2c3e50;
      font-size: 2em;
      margin-bottom: 20px;
      text-align: center;
    }

    .about-section p {
      color: #555;
      line-height: 1.6;
      margin-bottom: 15px;
      max-width: 800px;
      margin-left: auto;
      margin-right: auto;
      font-size: 1em;
    }

    .about-features {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
      gap: 20px;
      margin-top: 30px;
    }

    .feature {
      text-align: center;
      padding: 20px;
      border-radius: 8px;
      background-color: #f9f9f9;
      border: 1px solid #eee;
      transition: transform 0.3s ease;
      box-shadow: 0 2px 5px rgba(0, 0, 0, 0.05);
    }

    .feature:hover {
      transform: translateY(-3px);
      box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
    }

    .feature-icon {
      font-size: 2.5rem;
      color: #3a5a9f;
      margin-bottom: 10px;
    }

    .feature h3 {
      color: #2c3e50;
      margin-bottom: 10px;
      font-size: 1.2em;
    }

    .feature p {
      color: #666;
      font-size: 0.9em;
    }

    /* Footer */
    footer {
      width: 100%;
      background-color: #2c3e50;
      color: white;
      text-align: center;
      padding: 30px 20px;
      margin-top: auto;
    }

    .footer-content {
      max-width: 1200px;
      margin: 0 auto;
    }

    .copyright {
      margin-top: 20px;
      padding-top: 15px;
      border-top: 1px solid rgba(255, 255, 255, 0.1);
      font-size: 0.9em;
    }


   /* === ACESSIBILIDADE (Canto Esquerdo e Empilhado) === */
.acessibilidade {
    position: fixed;
    top: 800px;
    right: 20px; /* Movido para o canto esquerdo */
    
    z-index: 9999;
    display: flex;
    flex-direction: column; /* Empilha os bot√µes */
    gap: 10px;
}

.acessibilidade button,
.acessibilidade a {
