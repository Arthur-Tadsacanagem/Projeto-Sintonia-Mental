      text-decoration: none;
      font-weight: 500;
      transition: all 0.3s ease;
      padding: 0.5rem 0;
      position: relative;
    }

    nav ul li a:hover {
      color: #f0f0f0;
      opacity: 0.8;
    }

    nav ul li a::after {
      content: '';
      position: absolute;
      bottom: 0;
      left: 0;
      width: 0;
      height: 2px;
      background-color: white;
      transition: width 0.3s ease;
    }

    nav ul li a:hover::after {
      width: 100%;
    }

    /* Banner - Mantido como uma se√ß√£o de destaque fora do container principal */
    .banner {
      width: 100%;
      color: white;
      padding: 4rem 2rem;
      text-align: center;
      background: rgba(58, 90, 159, 0.85);
      /* Azul principal semi-transparente */
      position: relative;
      overflow: hidden;
    }

    .banner::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      z-index: -1;
      /* Ocupa todo o banner, mas fica atr√°s */
    }

    .banner h1 {
      font-size: 2.5rem;
      margin-bottom: 1rem;
      font-weight: 600;
      text-shadow: 1px 1px 3px rgba(0, 0, 0, 0.2);
    }

    .banner p {
