}

/* --- DARK MODE (APENAS ACESSIBILIDADE) --- */
body.dark-mode .acessibilidade button,
body.dark-mode .acessibilidade a {
    background-color: #444;
    color: #eee;
    border-color: #666;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.3);
}

body.dark-mode .acessibilidade button:hover,
body.dark-mode .acessibilidade a:hover {
    background-color: #555;
    border-color: #777;
    color: white;
}

/* --- RESPONSIVIDADE (AJUSTE DA ACESSIBILIDADE PARA MOBILE) --- */
@media (max-width: 768px) {
    /* Desfaz o empilhamento e usa o canto esquerdo em mobile */
    .acessibilidade { 
        top: 10px; 
        left: 10px; 
        right: auto;
        flex-direction: row; 
        gap: 8px;
    }
    .acessibilidade button, .acessibilidade a {
        width: 35px; /* Menor em mobile */
