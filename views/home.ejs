    /* Bot√£o de Filtro - Usando o estilo de bot√£o moderno com gradiente */
    .filter-button {
      width: 100%;
      padding: 14px;
      border-radius: 8px;
      background: linear-gradient(135deg, #3a5a9f 0%, #2980b9 100%);
      color: white;
      border: none;
      font-weight: 500;
      text-align: center;
      transition: all 0.3s ease;
      display: block;
      /* Para ocupar a largura total em mobile */
      margin-top: 20px;
      cursor: pointer;
      box-shadow: 0 4px 10px rgba(41, 128, 185, 0.3);
      font-size: 16px;
    }

    .filter-button:hover {
      transform: translateY(-2px);
