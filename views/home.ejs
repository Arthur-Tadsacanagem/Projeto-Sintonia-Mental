<!DOCTYPE html>
<html lang="pt-BR">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sintonia Mental - Conexão entre psicólogos e pacientes</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap"
        rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <style>
/* ================= VARIÁVEIS DE CORES (Nova paleta) ================= */
:root {
    --cor-primaria: #83b1d5;
    --cor-secundaria: #cdddec;
    --cor-de-fundo-body: #cdddec;
    --cor-de-fundo-container: #ffffff;
    --cor-texto: #333;
    --cor-borda-input: #aabed1;
    --cor-sombra: rgba(0, 0, 0, 0.1);
}

/* ================= DARK MODE VARIÁVEIS ================= */
body.dark-mode {
    --cor-de-fundo-body: #121212 !important;
    --cor-de-fundo-container: #1f1f1f !important;
    --cor-texto: #ccc;
    --cor-borda-input: #555;
    --cor-sombra: rgba(0, 0, 0, 0.4);
}

/* ================= RESET E FONTES ================= */
* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    font-family: 'Poppins', sans-serif;
}

body {
    background-color: var(--cor-de-fundo-body);
    color: var(--cor-texto);
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    transition: background-color 0.3s ease, color 0.3s ease;
}

/* ================= CABEÇALHO ================= */
header {
    width: 100%;
    background: linear-gradient(135deg, #83b1d5 0%, #cdddec 100%);
    padding: 1.5rem 2rem;
    color: white;
    display: flex;
    justify-content: space-between;
    align-items: center;
    box-shadow: 0 5px 15px var(--cor-sombra);
    position: sticky;
    top: 0;
    z-index: 1000;
}

body.dark-mode header {
    background: #1e1e1e;
}

.logo {
    font-size: 1.8em;
    font-weight: 700;
    letter-spacing: 1px;
}

.logo span {
    color: #ffffff;
}

nav ul {
    display: flex;
    list-style: none;
    margin: 0;
    padding: 0;
}

nav ul li {
    margin-left: 1.5rem;
}

nav ul li a {
    color: white;
    text-decoration: none;
    font-weight: 500;
    transition: all 0.3s ease;
    padding: 0.5rem 0;
    position: relative;
}

nav ul li a:hover {
    opacity: 0.8;
}

nav ul li a::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 0;
    height: 2px;
    background-color: white;
    transition: width 0.3s ease;
}

nav ul li a:hover::after {
    width: 100%;
}

/* ================= BANNER ================= */
.banner {
    width: 100%;
    color: white;
    padding: 4rem 2rem;
    text-align: center;
    background: linear-gradient(135deg, #83b1d5 0%, #cdddec 100%);
    position: relative;
    overflow: hidden;
}

body.dark-mode .banner {
    background: #0056b3;
}

.banner h1 {
    font-size: 2.5rem;
    margin-bottom: 1rem;
    font-weight: 600;
    text-shadow: 1px 1px 3px rgba(0, 0, 0, 0.2);
}

.banner p {
    font-size: 1.1rem;
    max-width: 800px;
    margin: 0 auto;
    font-weight: 300;
    line-height: 1.6;
}

/* ================= CONTAINER PRINCIPAL ================= */
.container {
    width: 95%;
    max-width: 1200px;
    margin: 40px auto;
    padding: 30px;
    box-shadow: 0 10px 30px var(--cor-sombra);
    border-radius: 15px;
    overflow: hidden;
    background: var(--cor-de-fundo-container);
    border: 1px solid var(--cor-borda-input);
    transition: transform 0.3s ease, box-shadow 0.3s ease, background-color 0.3s ease;
}

.container:hover {
    transform: translateY(-5px);
    box-shadow: 0 15px 35px var(--cor-sombra);
}

/* ================= TITULOS DE SEÇÃO ================= */
.section-title {
    text-align: center;
    margin-bottom: 40px;
    color: var(--cor-texto);
    font-weight: 600;
    font-size: 2.2em;
    position: relative;
}

.section-title::after {
    content: '';
    position: absolute;
    bottom: -10px;
    left: 50%;
    transform: translateX(-50%);
    width: 50px;
    height: 3px;
    background: var(--cor-primaria);
    border-radius: 3px;
}

/* ================= FILTROS ================= */
.filters-section {
    padding: 25px;
    border-radius: 12px;
    margin-bottom: 25px;
    background: var(--cor-de-fundo-container);
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
    border: 1px solid var(--cor-borda-input);
}

.filters-container {
    display: flex;
    flex-wrap: wrap;
    gap: 20px;
    align-items: flex-end;
}

.filter-group {
    flex: 1;
    min-width: 200px;
}

.filter-group label {
    display: block;
    margin-bottom: 8px;
    color: var(--cor-texto);
    font-weight: 500;
    font-size: 15px;
}

.filter-group select,
.filter-group input {
    width: 100%;
    padding: 12px 15px;
    border: 1px solid var(--cor-borda-input);
    border-radius: 8px;
    background: var(--cor-de-fundo-body);
    color: var(--cor-texto);
    transition: all 0.3s ease;
    font-size: 15px;
}

.filter-group select:focus,
.filter-group input:focus {
    border-color: var(--cor-primaria);
    box-shadow: 0 0 0 3px rgba(131, 177, 213, 0.3);
    outline: none;
}

/* ================= BOTÕES ================= */
.filter-button,
.know-more-btn,
.contact-btn,
.back-btn {
    background-color: var(--cor-primaria);
    color: white;
    border: none;
    width: 90%;
    padding: 10px 16px;
    border-radius: 15px;
    font-weight: 600;
    text-align: center;
    cursor: pointer;
    display: block;
    margin-left: auto;
    margin-right: auto;
    margin-top: 15px;
    font-size: 1em;
    transition: all 0.3s ease;
    box-shadow: 0 4px 10px rgba(131, 177, 213, 0.4);
    text-decoration: none;
}

.filter-button:hover,
.know-more-btn:hover,
.contact-btn:hover,
.back-btn:hover {
    background-color: var(--cor-secundaria);
    color: #333;
    transform: translateY(-2px);
    box-shadow: 0 6px 14px rgba(0, 0, 0, 0.15);
}

.back-btn {
    background-color: var(--cor-secundaria);
}

.back-btn:hover {
    background-color: #b8cbdd;
}

/* ================= CARDS ================= */
.cards-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    gap: 30px;
}

.psychologist-card {
    position: relative;
    width: 100%;
    height: 380px;
    perspective: 1000px;
    border-radius: 12px;
    transition: all 0.3s ease;
    box-shadow: 0 5px 15px var(--cor-sombra);
}

.psychologist-card:hover {
    box-shadow: 0 10px 25px var(--cor-sombra);
}

.card-front,
.card-info {
    position: absolute;
    width: 100%;
    height: 100%;
    backface-visibility: hidden;
    transition: transform 0.6s;
    background: var(--cor-de-fundo-container);
    color: var(--cor-texto);
    border-radius: 12px;
    padding: 20px;
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
    border: 1px solid var(--cor-borda-input);
}

.card-info {
    transform: rotateY(180deg);
    text-align: center;
    overflow-y: auto;
    align-items: flex-start;
    padding-top: 15px;
}

.psychologist-card.flipped .card-front {
    transform: rotateY(180deg);
}

.psychologist-card.flipped .card-info {
    transform: rotateY(0deg);
}

.profile-photo {
    width: 120px;
    height: 120px;
    border-radius: 50%;
    object-fit: cover;
    margin-bottom: 15px;
    border: 4px solid var(--cor-primaria);
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
}

.card-front h3 {
    color: var(--cor-texto);
    font-size: 1.4em;
    margin-bottom: 10px;
}

.card-info h3 {
    color: var(--cor-primaria);
    font-size: 1.3em;
    margin-bottom: 10px;
    width: 100%;
    text-align: center;
}

.card-info p {
    text-align: left;
    width: 100%;
    margin-bottom: 8px;
    line-height: 1.4;
    font-size: 0.95em;
    color: var(--cor-texto);
}

.card-info p strong {
    color: var(--cor-texto);
    font-weight: 600;
}

/* ================= SOBRE ================= */
.about-section {
    padding: 30px;
    border-radius: 12px;
    margin: 50px 0;
    background: var(--cor-de-fundo-container);
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
    border: 1px solid var(--cor-borda-input);
}

.about-section h2 {
    color: var(--cor-texto);
    font-size: 2em;
    margin-bottom: 20px;
    text-align: center;
}

.about-section p {
    color: var(--cor-texto);
    line-height: 1.6;
    margin-bottom: 15px;
    max-width: 800px;
    margin-left: auto;
    margin-right: auto;
    font-size: 1em;
}

.about-features {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 20px;
    margin-top: 30px;
}

.feature {
    text-align: center;
    padding: 20px;
    border-radius: 8px;
    background-color: var(--cor-de-fundo-body);
    border: 1px solid var(--cor-borda-input);
    transition: transform 0.3s ease;
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.05);
}

.feature:hover {
    transform: translateY(-3px);
    box-shadow: 0 5px 15px var(--cor-sombra);
}

.feature-icon {
    font-size: 2.5rem;
    color: var(--cor-primaria);
    margin-bottom: 10px;
}

.feature h3 {
    color: var(--cor-texto);
    margin-bottom: 10px;
    font-size: 1.2em;
}

.feature p {
    color: var(--cor-texto);
    font-size: 0.9em;
}

/* ================= FOOTER ================= */
footer {
    width: 100%;
    background: linear-gradient(135deg, #83b1d5 0%, #cdddec 100%);
    color: white;
    text-align: center;
    padding: 30px 20px;
    margin-top: auto;
    border-top: none;
}

.footer-content {
    max-width: 1200px;
    margin: 0 auto;
}

.copyright {
    margin-top: 20px;
    padding-top: 15px;
    border-top: 1px solid rgba(255, 255, 255, 0.3);
    font-size: 0.9em;
}

/* ================= ACESSIBILIDADE (mantido igual) ================= */
.acessibilidade-toggle {
    position: fixed;
    bottom: 20px;
    right: 20px;
    z-index: 10000;
    width: 50px;
    height: 50px;
    border-radius: 50%;
    background: #ffffff;
    color: #333;
    border: 2px solid #ddd;
    font-size: 1.5rem;
    cursor: pointer;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.2s ease;
}

.acessibilidade-toggle:hover {
    background: #f0f0f0;
    border-color: #999;
    transform: scale(1.05);
}

.acessibilidade-panel {
    position: fixed;
    bottom: 80px;
    right: 20px;
    display: flex;
    flex-direction: column-reverse;
    gap: 15px;
    z-index: 9999;
    visibility: hidden;
    opacity: 0;
    transform: translateY(20px);
    transition: opacity 0.3s ease, transform 0.3s ease, visibility 0.3s;
}

.acessibilidade-panel.show {
    visibility: visible;
    opacity: 1;
    transform: translateY(0);
}

.acessibilidade-panel a,
.acessibilidade-panel .acessibilidade-btn {
    width: 45px !important;
    height: 45px !important;
    min-width: 45px !important;
    border-radius: 50%;
    padding: 0;
    font-size: 1.1rem;
    border: 2px solid #ddd;
    background-color: #ffffff;
    color: #333;
    font-weight: 600;
    cursor: pointer;
    text-decoration: none;
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    transition: all 0.2s ease;
}

.acessibilidade-panel a:hover,
.acessibilidade-panel .acessibilidade-btn:hover {
    background-color: #f0f0f0;
    border-color: #999;
    color: #000;
    transform: scale(1.05);
    box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
}

/* ================= RESPONSIVIDADE ================= */
@media(max-width:768px) {
    header {
        flex-direction: column;
        padding: 1rem;
    }

    nav ul {
        margin-top: 1rem;
        justify-content: center;
        flex-wrap: wrap;
    }

    nav ul li {
        margin: 0.5rem;
    }

    .banner {
        padding: 3rem 1rem;
    }

    .filters-container {
        flex-direction: column;
        gap: 10px;
    }

    .filter-group {
        width: 100%;
    }

    .cards-grid {
        grid-template-columns: 1fr;
        gap: 20px;
    }

    .container {
        width: 95%;
        margin: 20px auto;
        padding: 20px;
    }

    .acessibilidade-toggle {
        bottom: 10px;
        right: 10px;
        width: 40px;
        height: 40px;
        font-size: 1.2rem;
    }

    .acessibilidade-panel {
        bottom: 60px;
        right: 10px;
        flex-direction: column-reverse;
        gap: 10px;
    }
}

    </style>
</head>

<body>
    <button class="acessibilidade-toggle" onclick="toggleAcessibilidadePanel()">
        <i class="fas fa-universal-access"></i>
    </button>

    <div class="acessibilidade-panel" id="acessibilidadePanel">
        <button id="aumentar-fonte" class="acessibilidade-btn" title="Aumentar Fonte"><i class="fas fa-plus"></i></button>
        <button id="diminuir-fonte" class="acessibilidade-btn" title="Diminuir Fonte"><i class="fas fa-minus"></i></button>
        <button id="toggle-tema" class="acessibilidade-btn" title="Alternar Tema Escuro">🌙</button>
        <a href="/login.html" id="btn-login" class="acessibilidade-btn" title="Acessar Login/Cadastro"><i class="fas fa-sign-in-alt"></i></a>
    </div>

    <header>
        <div class="logo">Sintonia<span>Mental</span></div>
        <nav>
            <ul>
                <li><a href="perfilpaciente">Perfil Paciente</a></li>
                <li><a href="perfilpsicologo">Perfil Psicólogo</a></li>
                <li><a href="/feedback.html">Ver Feedbacks</a></li>
            </ul>
        </nav>
    </header>

    <div class="banner">
        <h1>Encontre o psicólogo ideal para você</h1>
        <p>Conectamos pacientes a profissionais de saúde mental qualificados, facilitando o acesso a tratamentos
            personalizados em um ambiente seguro e acolhedor.</p>
    </div>

    <div class="container">
        <section class="filters-section">
            <h2 class="section-title">Filtrar Profissionais</h2>
            <div class="filters-container">
                <div class="filter-group">
                    <label for="searchName">Nome do Psicólogo</label>
                    <input type="text" id="searchName" placeholder="Digite o nome">
                </div>
                <div class="filter-group">
                    <label for="specialty">Especialidade</label>
                    <select id="specialty">
                        <option value="">Todas especialidades</option>
                        <option value="Psicologia Clínica">Psicologia Clínica</option>
                        <option value="Terapia Cognitivo-Comportamental">Terapia Cognitivo-Comportamental</option>
                        <option value="Psicanálise">Psicanálise</option>
                        <option value="Terapia Familiar">Terapia Familiar</option>
                        <option value="Psicologia Infantil">Psicologia Infantil</option>
                    </select>
                </div>
                <div class="filter-group">
                    <label for="approach">Abordagem</label>
                    <select id="approach">
                        <option value="">Todas abordagens</option>
                        <option value="Cognitivo-Comportamental">Cognitivo-Comportamental</option>
                        <option value="Psicanálise">Psicanálise</option>
                        <option value="Humanista">Humanista</option>
                        <option value="Sistêmica">Sistêmica</option>
                    </select>
                </div>
                <div class="filter-group">
                    <label for="modality">Modalidade</label>
                    <select id="modality">
                        <option value="">Todas modalidades</option>
                        <option value="Presencial">Presencial</option>
                        <option value="Online">Online</option>
                        <option value="Ambas">Presencial e Online</option>
                    </select>
                </div>
            </div>
            <button class="filter-button">Aplicar Filtros</button>
        </section>

        <section class="cards-section">
            <h2 class="section-title">Psicólogos disponíveis</h2>
            <% if (perfis.length===0) { %>
                <div class="no-professionals-message">
                    <p>Nenhum psicólogo encontrado.</p>
                </div>
                <% } else { %>
                    <div class="cards-grid">
                        <% perfis.forEach((perfil) => { %>
                            <div class="psychologist-card">
                                <div class="card-front">
                                    <img src="<%= perfil.foto %>" alt="Foto de <%= perfil.nome %>"
                                        class="profile-photo">
                                    <h3>
                                        <%= perfil.nome %>
                                    </h3>
                                    <button class="know-more-btn">Saiba mais</button>
                                </div>
                                <div class="card-info">
                                    <button class="back-btn">Voltar</button>
                                    <h3>
                                        <%= perfil.nome %>
                                    </h3>
                                    <p><strong>Especialidade:</strong>
                                        <%= perfil.especialidade %>
                                    </p>
                                    <p><strong>Abordagem:</strong>
                                        <%= perfil.abordagem %>
                                    </p>
                                    <p><strong>Modalidade:</strong>
                                        <%= perfil.modalidade %>
                                    </p>
                                    <p><strong>Telefone:</strong>
                                        <%= perfil.telefone %>
                                    </p>
                                    <p><strong>CRP:</strong>
                                        <%= perfil.crp %>
                                    </p>
                                    <a href="<%= perfil.whatsapp %>" target="_blank" class="contact-btn">Entrar em
                                        contato</a>
                                </div>
                            </div>
                            <% }); %>
                    </div>
                    <% } %>
        </section>
    </div>

    <section class="about-section">
        <h2 class="section-title">Sobre o Sintonia Mental</h2>
        <p>O Sintonia Mental conecta pacientes a psicólogos qualificados, garantindo um ambiente seguro, acolhedor e
            eficiente para o cuidado da saúde mental.</p>
        <div class="about-features">
            <div class="feature">
                <div class="feature-icon">🧠</div>
                <h3>Profissionais Qualificados</h3>
                <p>Todos os psicólogos cadastrados possuem CRP válido e experiência comprovada.</p>
            </div>
            <div class="feature">
                <div class="feature-icon">💬</div>
                <h3>Atendimento Personalizado</h3>
                <p>Filtre por especialidade, abordagem e modalidade para encontrar o profissional ideal.</p>
            </div>
            <div class="feature">
                <div class="feature-icon">🌐</div>
                <h3>Modalidade Online e Presencial</h3>
                <p>Escolha como deseja ser atendido, presencialmente ou via sessões online.</p>
            </div>
        </div>
    </section>

    <footer>
        <div class="footer-content">
            <p>Sintonia Mental &copy; 2025. Todos os direitos reservados.</p>
            <div class="copyright">Desenvolvido com ❤️</div>
        </div>
    </footer>

    <script>
        // NOVO CÓDIGO: Lógica para mostrar/esconder o painel de acessibilidade
        function toggleAcessibilidadePanel() {
            const panel = document.getElementById('acessibilidadePanel');
            panel.classList.toggle('show');
        }

        // ================= DARK MODE (Centralizado no Painel) =================
        const toggleTemaBtn = document.getElementById('toggle-tema');
        toggleTemaBtn.addEventListener('click', () => {
            document.body.classList.toggle('dark-mode');
            const isDarkMode = document.body.classList.contains('dark-mode');
            toggleTemaBtn.textContent = isDarkMode ? '☀️' : '🌙';
        });


        // ================= AJUSTE DE FONTE =================
        const aumentarFonteBtn = document.getElementById('aumentar-fonte');
        const diminuirFonteBtn = document.getElementById('diminuir-fonte');
        let fontSize = 16;

        aumentarFonteBtn.addEventListener('click', () => {
            if (fontSize < 22) {
                fontSize += 1;
                document.body.style.fontSize = fontSize + 'px';
            }
        });
        diminuirFonteBtn.addEventListener('click', () => {
            if (fontSize > 12) {
                fontSize -= 1;
                document.body.style.fontSize = fontSize + 'px';
            }
        });

        // ================= FLIP CARD =================
        const cards = document.querySelectorAll('.psychologist-card');
        cards.forEach(card => {
            const knowMore = card.querySelector('.know-more-btn');
            const backBtn = card.querySelector('.back-btn');
            knowMore.addEventListener('click', () => card.classList.add('flipped'));
            backBtn.addEventListener('click', () => card.classList.remove('flipped'));
        });

        // ================= FILTRO =================
        const searchInput = document.getElementById('searchName');
        const specialtySelect = document.getElementById('specialty');
        const approachSelect = document.getElementById('approach');
        const modalitySelect = document.getElementById('modality');
        const filterBtn = document.querySelector('.filter-button');

        filterBtn.addEventListener('click', () => {
            const nameVal = searchInput.value.toLowerCase();
            const specialtyVal = specialtySelect.value.toLowerCase();
            const approachVal = approachSelect.value.toLowerCase();
            const modalityVal = modalitySelect.value.toLowerCase();

            cards.forEach(card => {
                const nome = card.querySelector('.card-front h3').textContent.toLowerCase();
                const especialidade = card.querySelector('.card-info p:nth-child(2)').textContent.toLowerCase();
                const abordagem = card.querySelector('.card-info p:nth-child(3)').textContent.toLowerCase();
                const modalidade = card.querySelector('.card-info p:nth-child(4)').textContent.toLowerCase();

                if ((nome.includes(nameVal) || nameVal === '') &&
                    (especialidade.includes(specialtyVal) || specialtyVal === '') &&
                    (abordagem.includes(approachVal) || approachVal === '') &&
                    (modalidade.includes(modalityVal) || modalityVal === '')) {
                    card.style.display = '';
                } else {
                    card.style.display = 'none';
                }
            });
        });
    </script>
</body>

</html>