    /* Cabe√ßalho (Header) - Aplicando o estilo de gradiente da Sidebar */
    header {
      width: 100%;
      background: linear-gradient(135deg, #3a5a9f 0%, #2c3e50 100%);
      padding: 1.5rem 2rem;
      color: white;
      display: flex;
      justify-content: space-between;
      align-items: center;
      box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
      position: sticky;
      top: 0;
      z-index: 1000;
    }

    .logo {
