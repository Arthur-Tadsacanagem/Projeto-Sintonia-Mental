<!DOCTYPE html>
<html lang="pt-BR">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Meu Perfil de Paciente</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <style>
        /* === ESTILOS GERAIS (COPIADO DO PSIC√ìLOGO) === */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Poppins', sans-serif;
            /* Usando Poppins por consist√™ncia */
        }

        body {
            /* Mantendo o estilo do body do psic√≥logo para o background */
            background: url('https://images.pexels.com/photos/53594/lake-sunrise-fog-morning-53594.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1') no-repeat center center/cover;
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            background-color: #f8f9fa;
            padding: 20px;
            transition: background-color 0.3s ease, color 0.3s ease;
        }

        .container {
            display: flex;
            flex-direction: column;
            width: 90%;
            max-width: 1200px;
            height: auto;
            max-height: 90vh; /* Ajustado para melhor visualiza√ß√£o do hist√≥rico */
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15);
            border-radius: 15px;
            overflow: hidden;
            background: rgba(255, 255, 255, 0.9);
            backdrop-filter: blur(5px);
            border: 1px solid rgba(255, 255, 255, 0.2);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

        .container:hover {
            transform: translateY(-5px);
            box-shadow: 0 15px 35px rgba(0, 0, 0, 0.2);
        }

        /* Barra Lateral (Sidebar) */
        .sidebar {
            width: 100%;
            background: linear-gradient(135deg, #3a5a9f 0%, #2c3e50 100%);
            padding: 30px 20px;
            color: white;
            text-align: center;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: flex-start;
        }

        .profile-section {
            margin-bottom: 30px;
            width: 100%;
        }

        .profile-avatar {
            width: 120px;
            height: 120px;
            border-radius: 50%;
            margin-bottom: 15px;
            object-fit: cover;
            border: 4px solid rgba(255, 255, 255, 0.3);
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
        }

        .sidebar h2 {
            font-size: 1.8em;
            margin-bottom: 5px;
        }

        .sidebar .profile-title {
            font-size: 1.1em;
            opacity: 0.9;
        }

        .contact-info {
            margin-top: 20px;
            text-align: left;
            width: 100%;
            max-width: 200px;
        }

        .contact-info h3 {
            margin-bottom: 15px;
            font-size: 1.4em;
            position: relative;
            padding-bottom: 5px;
        }

        .contact-info h3::after {
            content: '';
            position: absolute;
            bottom: 0;
            left: 0;
            width: 40px;
            height: 2px;
            background: white;
        }

        .contact-info p {
            margin-bottom: 10px;
            font-size: 1em;
        }

        /* Conte√∫do Principal (Main Content) */
        .main-content {
            width: 100%;
            padding: 30px;
            overflow-y: auto;
        }

        .main-content h1 {
            text-align: center;
            margin-bottom: 30px;
            color: #2c3e50;
            font-weight: 600;
            position: relative;
        }
        
        /* Bot√µes e Navega√ß√£o */
        button,
        .navigate {
            padding: 14px;
            border-radius: 8px;
            background: linear-gradient(135deg, #3a5a9f 0%, #2980b9 100%);
            color: white;
            border: none;
            font-weight: 500;
            text-align: center;
            transition: all 0.3s ease;
            display: inline-block;
            cursor: pointer;
            box-shadow: 0 4px 10px rgba(41, 128, 185, 0.3);
            font-size: 16px;
            text-decoration: none;
            width: 100%;
            margin-top: 15px;
        }
        
        .navigate {
            /* Estilo espec√≠fico para link dentro do sidebar */
            margin-top: 30px;
            text-transform: uppercase;
        }

        button:hover,
        .navigate:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 15px rgba(41, 128, 185, 0.4);
            background: linear-gradient(135deg, #2980b9 0%, #3a5a9f 100%);
        }

        /* Estilo da Tabela de Atendimentos */
        .atendimentos-table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        .atendimentos-table th,
        .atendimentos-table td {
            border: 1px solid #ddd;
            padding: 12px;
            text-align: left;
        }

        .atendimentos-table th {
            background-color: #f2f2f2;
            color: #333;
        }

        .no-data {
            text-align: center;
            padding: 20px;
            color: #666;
        }

        .feedback-btn {
            background: #27ae60; /* Verde para Avalia√ß√£o */
            color: white;
            padding: 8px 12px;
            border-radius: 5px;
            text-decoration: none;
            display: inline-block;
            font-size: 0.9em;
            transition: background 0.3s;
        }
        .feedback-btn:hover {
            background: #219653;
        }

        /* === MODO ESCURO === */
        body.dark-mode {
            background-color: #121212 !important;
            color: #e0e0e0 !important;
        }

        body.dark-mode .container {
            background: rgba(30, 30, 30, 0.95) !important;
            color: #e0e0e0 !important;
        }

        body.dark-mode .main-content {
            background-color: #1e1e1e !important;
            color: #e0e0e0 !important;
        }
        
        body.dark-mode .atendimentos-table th {
            background-color: #333;
            color: #e0e0e0;
        }
        
        body.dark-mode .atendimentos-table th,
        body.dark-mode .atendimentos-table td {
            border-color: #555;
        }
        
        body.dark-mode .feedback-btn {
             background: #1abc9c;
        }
        body.dark-mode .feedback-btn:hover {
            background: #14a383;
        }

        /* Media Queries para Desktop */
        @media (min-width: 768px) {
            .container {
                flex-direction: row;
                height: 80vh;
                max-height: 700px;
            }
            .sidebar {
                width: 300px;
                min-width: 250px;
                padding: 40px 30px;
            }
            .main-content {
                width: calc(100% - 300px);
                padding: 40px;
            }
        }
        
        /* Estilos da barra de acessibilidade (mantidos do seu c√≥digo) */
        .acessibilidade {
            position: absolute;
            top: 20px;
            right: 20px;
            z-index: 9999;
            display: flex;
            gap: 10px;
        }

        .acessibilidade button,
        .acessibilidade a {
            padding: 8px 12px;
            background: #3a5a9f;
            color: #fff;
            border: none;
            border-radius: 8px;
            font-weight: bold;
            cursor: pointer;
            text-decoration: none;
            transition: background 0.3s ease;
        }

        .acessibilidade button:hover,
        .acessibilidade a:hover {
            background: #2c3e50;
        }
    </style>
</head>

<body>
    <div class="acessibilidade">
        <button id="aumentar-fonte">A+</button>
        <button id="diminuir-fonte">A-</button>
        <button id="toggle-tema">üåô</button>
        <a href="/home" id="btn-home" class="acessibilidade-btn" title="Voltar para Home">üè†</a>
    </div>

    <div class="container">
        <aside class="sidebar">
            <div class="profile-section">
                <% if (paciente && paciente.foto) { %>
                    <img src="<%= paciente.foto %>" alt="Avatar do Paciente" class="profile-avatar">
                <% } else { %>
                    <img src="https://via.placeholder.com/120/f39c12/FFFFFF?text=Paciente" alt="Avatar Padr√£o"
                        class="profile-avatar">
                <% } %>
                <h2>
                    <%= paciente.nome %>
                </h2>
                <p class="profile-title">Paciente</p>
            </div>
            
            <div class="contact-info">
                <h3>Minhas Infos</h3>
                <p>
                    <i class="fas fa-envelope"></i> <%= paciente.login %>
                </p>
                <p>
                    <i class="fas fa-phone"></i> <%= paciente.telefone %>
                </p>
                <a href="/logout" class="navigate">Sair</a>
            </div>
        </aside>

        <main class="main-content">
            <h1>Hist√≥rico de Atendimentos</h1>
            
            <table class="atendimentos-table">
                <thead>
                    <tr>
                        <th>Psic√≥logo(a)</th>
                        <th>Data</th>
                        <th>A√ß√£o</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (atendimentos && atendimentos.length > 0) { %>
                        <% atendimentos.forEach(atendimento => { %>
                            <tr>
                                <td><%= atendimento.psicologo_nome %></td>
                                <td><%= new Date(atendimento.data_inicio).toLocaleDateString('pt-BR') %></td>
                                <td>
                                    <a href="/feedback?atendimento_id=<%= atendimento.id %>" class="feedback-btn">
                                        Avaliar Atendimento
                                    </a>
                                </td>
                            </tr>
                        <% }); %>
                    <% } else { %>
                        <tr>
                            <td colspan="3" class="no-data">Nenhum atendimento encontrado.</td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </main>
    </div>

    <script>
        // --- JS DE ACESSIBILIDADE E MODO ESCURO (Cop√≠ado e Unificado) ---
        
        // Elementos de acessibilidade
        const toggleTemaBtn = document.getElementById("toggle-tema");
        const aumentarFonteBtn = document.getElementById("aumentar-fonte");
        const diminuirFonteBtn = document.getElementById("diminuir-fonte");

        // L√≥gica de Modo Escuro
        toggleTemaBtn.addEventListener("click", () => {
            document.body.classList.toggle("dark-mode");
            const isDark = document.body.classList.contains("dark-mode");
            localStorage.setItem("modoEscuro", isDark);
            toggleTemaBtn.textContent = isDark ? "‚òÄÔ∏è" : "üåô";
        });
        
        // L√≥gica de Fonte
        let fontSize = 16; 
        
        function ajustarFonte(tamanho) {
            document.querySelectorAll('body, h1, h2, h3, p, a, button, table, th, td').forEach(el => {
                el.style.fontSize = `${tamanho}px`;
            });
        }

        aumentarFonteBtn.addEventListener("click", () => {
            if (fontSize < 24) { 
                fontSize += 2;
                ajustarFonte(fontSize);
            }
        });

        diminuirFonteBtn.addEventListener("click", () => {
            if (fontSize > 10) { 
                fontSize -= 2;
                ajustarFonte(fontSize);
            }
        });

        // Carregar estado ao iniciar
        window.addEventListener("DOMContentLoaded", () => {
            if (localStorage.getItem("modoEscuro") === "true") {
                document.body.classList.add("dark-mode");
                toggleTemaBtn.textContent = "‚òÄÔ∏è";
            }
        });
    </script>
</body>

</html>