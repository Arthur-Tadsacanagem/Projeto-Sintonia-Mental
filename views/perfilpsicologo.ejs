<<!DOCTYPE html>
    <html lang="pt-BR">

    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Meu Perfil de Psicólogo</title>
        <style>
            /* Estilos Gerais */
            * {
                margin: 0;
                padding: 0;
                box-sizing: border-box;
                font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            }

            body {
                background: url('https://images.pexels.com/photos/53594/lake-sunrise-fog-morning-53594.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1') no-repeat center center/cover;
                /* Usando uma imagem de exemplo */
                display: flex;
                justify-content: center;
                align-items: center;
                min-height: 100vh;
                background-color: #f8f9fa;
                /* Cor de fundo de fallback */
                padding: 20px;
                /* Adiciona um pouco de padding para telas menores */
            }

            .container {
                display: flex;
                flex-direction: column;
                /* Coluna em telas pequenas */
                width: 90%;
                max-width: 1200px;
                height: auto;
                box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15);
                border-radius: 15px;
                overflow: hidden;
                background: rgba(255, 255, 255, 0.9);
                backdrop-filter: blur(5px);
                border: 1px solid rgba(255, 255, 255, 0.2);
                transition: transform 0.3s ease, box-shadow 0.3s ease;
            }

            .container:hover {
                transform: translateY(-5px);
                box-shadow: 0 15px 35px rgba(0, 0, 0, 0.2);
            }

            /* Barra Lateral (Sidebar) */
            .sidebar {
                width: 100%;
                background: linear-gradient(135deg, #3a5a9f 0%, #2c3e50 100%);
                padding: 30px 20px;
                color: white;
                text-align: center;
                position: relative;
                display: flex;
                flex-direction: column;
                align-items: center;
                justify-content: space-between;
                /* Para espaçar o conteúdo verticalmente */
            }

            .sidebar::after {
                content: '';
                position: absolute;
                bottom: 0;
                left: 50%;
                transform: translateX(-50%);
                width: 80%;
                height: 1px;
                background: rgba(255, 255, 255, 0.2);
                display: none;
                /* Esconde em mobile, aparece em desktop */
            }

            .profile-section {
                margin-bottom: 30px;
                width: 100%;
                /* Ocupa a largura total na sidebar */
            }

            .profile-avatar {
                width: 120px;
                height: 120px;
                border-radius: 50%;
                margin-bottom: 15px;
                object-fit: cover;
                border: 4px solid rgba(255, 255, 255, 0.3);
                box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
            }

            .sidebar h2 {
                font-size: 1.8em;
                margin-bottom: 5px;
            }

            .sidebar .profile-title {
                font-size: 1.1em;
                opacity: 0.9;
            }

            .contact-info {
                margin-top: 20px;
                text-align: left;
                width: 100%;
                max-width: 200px;
                /* Limita a largura para melhor leitura */
            }

            .contact-info h3 {
                margin-bottom: 15px;
                font-size: 1.4em;
                position: relative;
                padding-bottom: 5px;
            }

            .contact-info h3::after {
                content: '';
                position: absolute;
                bottom: 0;
                left: 0;
                width: 40px;
                height: 2px;
                background: white;
            }

            .contact-info p {
                display: flex;
                align-items: center;
                margin-bottom: 10px;
                font-size: 1em;
            }

            .contact-info img {
                width: 18px;
                height: 18px;
                margin-right: 10px;
                border-radius: 50%;
                /* Para ícones genéricos */
            }

            /* Conteúdo Principal (Main Content) */
            .main-content {
                width: 100%;
                padding: 30px;
            }

            .main-content h1 {
                text-align: center;
                margin-bottom: 30px;
                color: #2c3e50;
                font-weight: 600;
                position: relative;
            }

            .main-content h1::after {
                content: '';
                position: absolute;
                bottom: -10px;
                left: 50%;
                transform: translateX(-50%);
                width: 50px;
                height: 3px;
                background: linear-gradient(to right, #3a5a9f, #2980b9);
                border-radius: 3px;
            }

            /* Cartões Internos */
            .card {
                display: flex;
                flex-direction: column;
                /* Coluna em telas pequenas */
                padding: 25px;
                border-radius: 12px;
                margin-bottom: 25px;
                background: white;
                box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
                border: 1px solid rgba(0, 0, 0, 0.05);
            }

            .card-left,
            .card-right {
                flex: 1;
                /* Distribui o espaço igualmente em desktop */
                padding: 0;
                /* Remove padding padrão para melhor controle */
            }

            .card-left {
                margin-bottom: 20px;
                /* Espaço entre as colunas em mobile */
            }

            .card-left label,
            .card-right label {
                display: block;
                margin-bottom: 8px;
                color: #3a5a9f;
                font-weight: 500;
                font-size: 15px;
            }

            .card-left input[type="text"],
            .card-left input[type="file"],
            .card-left select,
            .card-right select,
            .card-right textarea {
                width: 100%;
                padding: 12px 15px;
                margin-bottom: 15px;
                /* Espaçamento padrão para todos os campos */
                border: 1px solid #e0e0e0;
                border-radius: 8px;
                background: #f9f9f9;
                transition: all 0.3s ease;
                font-size: 15px;
            }

            .card-left input:focus,
            .card-left select:focus,
            .card-right select:focus,
            .card-right textarea:focus {
                border-color: #3a5a9f;
                box-shadow: 0 0 0 3px rgba(58, 90, 159, 0.1);
                outline: none;
            }

            textarea {
                resize: vertical;
                min-height: 100px;
                /* Ajusta a altura mínima para textarea */
                max-height: 200px;
            }

            /* Botões */
            button,
            .navigate {
                width: 100%;
                padding: 14px;
                border-radius: 8px;
                background: linear-gradient(135deg, #3a5a9f 0%, #2980b9 100%);
                color: white;
                border: none;
                font-weight: 500;
                text-align: center;
                transition: all 0.3s ease;
                display: inline-block;
                margin-top: 20px;
                /* Espaço acima do botão */
                cursor: pointer;
                box-shadow: 0 4px 10px rgba(41, 128, 185, 0.3);
                font-size: 16px;
                text-decoration: none;
                /* Para o botão "Voltar para Home" */
            }

            button:hover,
            .navigate:hover {
                transform: translateY(-2px);
                box-shadow: 0 6px 15px rgba(41, 128, 185, 0.4);
                background: linear-gradient(135deg, #2980b9 0%, #3a5a9f 100%);
            }

            /* Media Queries para Desktop */
            @media (min-width: 768px) {
                .container {
                    flex-direction: row;
                    /* Lado a lado em telas maiores */
                    height: 80vh;
                    /* Altura fixa para o cartão principal */
                    max-height: 700px;
                }
            }

                .sidebar {
                    width: 300px;
                    /* Largura fixa para a sidebar */
                    min-width: 250px;
                    padding: 40px 30px;
                    justify-content: flex-start;
                    /* Alinha o conteúdo ao topo */
                }

                .sidebar::after {
                    display: block;
                    /* Mostra a linha divisória em desktop */
                }

                .main-content {
                    width: calc(100% - 300px);
                    /* Ocupa o restante do espaço */
                    padding: 40px;
                    overflow-y: auto;
                    /* Adiciona scroll se o conteúdo for muito grande */
                }

                .profile-section {
                    margin-bottom: 50px;
                }

                .card {
                    flex-direction: row;
                    /* Lado a lado dentro dos cartões */
                    padding: 30px;
                }

                .card-left {
                    padding-right: 25px;
                    margin-bottom: 0;
                    /* Remove espaço extra em desktop */
                }

                .card-right {
                    padding-left: 25px;
                    border-left: 1px solid #eee;
                    /* Adiciona uma linha divisória visual */
                }

                button,
                .navigate {
                    width: auto;
                    /* Botões podem ter largura automática em desktop */
                    min-width: 200px;
                    margin: 20px auto;
                    /* Centraliza o botão */
                    display: block;
                    /* Garante que o margin auto funcione */
                }

                .acessibilidade {
                    position: absolute;
                    top: 20px;
                    right: 20px;
                    z-index: 9999;
                    display: flex;
                    gap: 10px;
                }

                .acessibilidade button,
                .acessibilidade a {
                    padding: 8px 12px;
                    background: #3a5a9f;
                    color: #fff;
                    border: none;
                    border-radius: 8px;
                    font-weight: bold;
                    cursor: pointer;
                    text-decoration: none;
                    transition: background 0.3s ease;
                }

                .acessibilidade button:hover,
                .acessibilidade a:hover {
                    background: #2c3e50;
                }

                body.dark-mode {
                    background-color: #121212 !important;
                    color: #e0e0e0 !important;
                }

                body.dark-mode .container {
                    background: rgba(30, 30, 30, 0.95) !important;
                    color: #e0e0e0 !important;
                }

                body.dark-mode .sidebar,
                body.dark-mode .card,
                body.dark-mode .main-content {
                    background-color: #1e1e1e !important;
                    color: #e0e0e0 !important;
                }

                body.dark-mode input,
                body.dark-mode select,
                body.dark-mode textarea {
                    background-color: #333;
                    color: #e0e0e0;
                    border-color: #555;
                }

                body.dark-mode label {
                    color: #f0f0f0;
                }

                body.dark-mode .acessibilidade button,
                body.dark-mode .acessibilidade a {
                    background: #555;

                }

                /* Estilos para as abas */
                .tabs {
                    display: flex;
                    margin-bottom: 20px;
                    border-bottom: 1px solid #ddd;
                }



                .tab-button.active {
                    border-bottom: 3px solid #3a5a9f;
                    font-weight: bold;
                }

                .tab-content {
                    display: none;
                }

                /* Estilos para a lista de pacientes */
                .patients-table {
                    width: 100%;
                    border-collapse: collapse;
                    margin-top: 20px;
                }

                .patients-table th,
                .patients-table td {
                    border: 1px solid #ddd;
                    padding: 12px;
                    text-align: left;
                }

                .patients-table th {
                    background-color: #f2f2f2;
                }

                .add-patient {
                    margin: 20px 0;
                }

                /* Estilos para o modal */
                .modal {
                    display: none;
                    position: fixed;
                    z-index: 1;
                    left: 0;
                    top: 0;
                    width: 100%;
                    height: 100%;
                    background-color: rgba(0, 0, 0, 0.5);
                }

                .modal-content {
                    background-color: #fefefe;
                    margin: 10% auto;
                    padding: 20px;
                    border: 1px solid #888;
                    width: 50%;
                    border-radius: 8px;
                }

                .close {
                    color: #aaa;
                    float: right;
                    font-size: 28px;
                    font-weight: bold;
                    cursor: pointer;
                }

                .close:hover {
                    color: black;
                }
        </style>
    </head>

    <body>
        <div class="acessibilidade">
            <button id="aumentar-fonte">A+</button>
            <button id="diminuir-fonte">A-</button>
            <button id="toggle-tema">🌙</button>
            <a href="/home" id="btn-home" title="Voltar para Home">🏠</a>
        </div>

        <div class="container">
            <aside class="sidebar">
                <div class="profile-section">
                    <% if (perfil && perfil.foto) { %>
                        <img src="<%= perfil.foto %>" alt="Avatar do Psicólogo" class="profile-avatar">
                        <% } else { %>
                            <img src="https://via.placeholder.com/120/3a5a9f/FFFFFF?text=Psicólogo" alt="Avatar Padrão"
                                class="profile-avatar">
                            <% } %>
                                <h2>
                                    <%= usuario.nome %>
                                </h2>
                                <p class="profile-title">Psicólogo(a)</p>
                </div>
                <div class="contact-info">
                    <h3>Contato</h3>
                    <p>
                        <%= perfil ? perfil.celular : '(Não informado)' %>
                    </p>
                    <a href="/home" class="navigate">Voltar para Home</a>
                </div>
            </aside>

            <main class="main-content">
                <div class="tabs">
                    <button class="tab-button active" onclick="openTab('editar-perfil')">Editar Perfil</button>
                    <button class="tab-button" onclick="openTab('meus-pacientes')">Meus Pacientes</button>
                </div>

                <!-- Aba Editar Perfil -->
                <div id="editar-perfil" class="tab-content" style="display: block;">
                    <h1>Editar Perfil</h1>
                    <form action="/salvar-perfil" method="POST" enctype="multipart/form-data">
                        <div class="card">
                            <div class="card-left">
                                <label for="foto">Alterar Foto:</label>
                                <input type="file" id="foto" name="foto" accept=".jpg,.jpeg,image/jpeg,.png">


                                <label for="crp">CRP:</label>
                                <input type="text" id="crp" name="crp" value="<%= perfil ? perfil.crp : '' %>" required
                                    placeholder="Ex: 00/00000">

                                <label for="celular">Celular:</label>
                                <input type="text" id="celular" name="celular"
                                    value="<%= perfil ? perfil.celular : '' %>" required placeholder="(99) 99999-9999">
                            </div>
                            <div class="card-right">
                                <label for="descricao">Resumo Profissional:</label>
                                <textarea id="descricao" name="descricao"
                                    placeholder="Descreva sua experiência, áreas de atuação e abordagem..."><%= perfil ? perfil.descricao : '' %></textarea>
                            </div>
                        </div>

                        <div class="card">
                            <div class="card-left">
                                <label for="especialidade">Especialidade:</label>
                                <select id="especialidade" name="especialidade">
                                    <option value="">Selecione uma especialidade</option>
                                    <option value="Psicologia Clínica" <%=perfil &&
                                        perfil.especialidade==='Psicologia Clínica' ? 'selected' : '' %>>Psicologia
                                        Clínica</option>
                                    <option value="Terapia Cognitivo-Comportamental" <%=perfil &&
                                        perfil.especialidade==='Terapia Cognitivo-Comportamental' ? 'selected' : '' %>
                                        >Terapia Cognitivo-Comportamental</option>
                                    <option value="Psicanálise" <%=perfil && perfil.especialidade==='Psicanálise'
                                        ? 'selected' : '' %>>Psicanálise</option>
                                    <option value="Terapia Familiar" <%=perfil &&
                                        perfil.especialidade==='Terapia Familiar' ? 'selected' : '' %>>Terapia Familiar
                                    </option>
                                    <option value="Psicologia Infantil" <%=perfil &&
                                        perfil.especialidade==='Psicologia Infantil' ? 'selected' : '' %>>Psicologia
                                        Infantil</option>
                                </select>
                            </div>
                            <div class="card-right">
                                <label for="abordagem">Abordagem Terapêutica:</label>
                                <select id="abordagem" name="abordagem">
                                    <option value="">Selecione uma abordagem</option>
                                    <option value="Cognitivo-Comportamental" <%=perfil &&
                                        perfil.abordagem==='Cognitivo-Comportamental' ? 'selected' : '' %>
                                        >Cognitivo-Comportamental</option>
                                    <option value="Psicanálise" <%=perfil && perfil.abordagem==='Psicanálise'
                                        ? 'selected' : '' %>>Psicanálise</option>
                                    <option value="Humanista" <%=perfil && perfil.abordagem==='Humanista' ? 'selected'
                                        : '' %>>Humanista</option>
                                    <option value="Sistêmica" <%=perfil && perfil.abordagem==='Sistêmica' ? 'selected'
                                        : '' %>>Sistêmica</option>
                                </select>
                            </div>
                        </div>

                        <div class="card">
                            <div class="card-left">
                                <label for="modalidade">Modalidade de Atendimento:</label>
                                <select id="modalidade" name="modalidade">
                                    <option value="Presencial" <%=perfil && perfil.modalidade==='Presencial'
                                        ? 'selected' : '' %>>Presencial</option>
                                    <option value="Online" <%=perfil && perfil.modalidade==='Online' ? 'selected' : ''
                                        %>>Online</option>
                                    <option value="Híbrido" <%=perfil && perfil.modalidade==='Híbrido' ? 'selected' : ''
                                        %>>Híbrido</option>
                                </select>
                            </div>
                        </div>

                        <button type="submit">Salvar Alterações</button>
                    </form>
                </div>

                <!-- Aba Meus Pacientes -->
                <div id="meus-pacientes" class="tab-content">
                    <h1>Meus Pacientes</h1>
                    <div class="add-patient">
                        <button onclick="openAddPatientModal()">Adicionar Novo Paciente</button>
                    </div>

                    <table class="patients-table">
                        <thead>
                            <tr>
                                <th>Nome</th>
                                <th>CPF</th>
                                <th>Data do Primeiro Atendimento</th>
                                <th>Ações</th>
                            </tr>
                        </thead>
                        <tbody id="patients-list">
                            <!-- Os pacientes serão carregados via JavaScript -->
                        </tbody>
                    </table>

                    <!-- Modal para adicionar paciente -->
                    <div id="addPatientModal" class="modal">
                        <div class="modal-content">
                            <span class="close" onclick="closeAddPatientModal()">&times;</span>
                            <h2>Adicionar Paciente</h2>
                            <div id="available-patients-container"></div>
                        </div>
                    </div>
                </div>
            </main>
        </div>

        <script>
            // Funções para controle das abas
            function openTab(tabName) {
                const tabContents = document.getElementsByClassName('tab-content');
                for (let i = 0; i < tabContents.length; i++) {
                    tabContents[i].style.display = 'none';
                }

                const tabButtons = document.getElementsByClassName('tab-button');
                for (let i = 0; i < tabButtons.length; i++) {
                    tabButtons[i].classList.remove('active');
                }

                document.getElementById(tabName).style.display = 'block';
                event.currentTarget.classList.add('active');

                // Se for a aba de pacientes, carrega a lista
                if (tabName === 'meus-pacientes') {
                    loadPatients();
                }
            }

            // Carrega a lista de pacientes
            function loadPatients() {
                fetch('/meus-pacientes-data')
                    .then(response => response.json())
                    .then(data => {
                        const tableBody = document.getElementById('patients-list');
                        tableBody.innerHTML = '';

                        if (data.pacientes.length === 0) {
                            tableBody.innerHTML = '<tr><td colspan="4">Nenhum paciente encontrado</td></tr>';
                            return;
                        }

                        data.pacientes.forEach(paciente => {
                            const row = document.createElement('tr');
                            row.innerHTML = `
                            <td>${paciente.nome}</td>
                            <td>${paciente.cpf}</td>
                            <td>${new Date(paciente.data_inicio).toLocaleDateString()}</td>
                            <td>
                                <button onclick="viewPatient(${paciente.id})">Ver</button>
                            </td>
                        `;
                            tableBody.appendChild(row);
                        });
                    })
                    .catch(error => {
                        console.error('Erro ao carregar pacientes:', error);
                    });
            }

            // Modal para adicionar paciente
            function openAddPatientModal() {
                fetch('/pacientes-disponiveis')
                    .then(response => response.json())
                    .then(data => {
                        const container = document.getElementById('available-patients-container');
                        container.innerHTML = '';

                        if (data.pacientes.length === 0) {
                            container.innerHTML = '<p>Não há pacientes disponíveis para adicionar.</p>';
                            return;
                        }

                        const select = document.createElement('select');
                        select.id = 'patientSelect';

                        data.pacientes.forEach(paciente => {
                            const option = document.createElement('option');
                            option.value = paciente.id;
                            option.textContent = `${paciente.nome} (${paciente.cpf})`;
                            select.appendChild(option);
                        });

                        const button = document.createElement('button');
                        button.textContent = 'Registrar Atendimento';
                        button.onclick = registerAttendance;

                        container.appendChild(select);
                        container.appendChild(document.createElement('br'));
                        container.appendChild(button);
                    });

                document.getElementById('addPatientModal').style.display = 'block';
            }

            function closeAddPatientModal() {
                document.getElementById('addPatientModal').style.display = 'none';
            }

            function registerAttendance() {
                const select = document.getElementById('patientSelect');
                const pacienteId = select.value;

                fetch('/registrar-atendimento', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ pacienteId })
                })
                    .then(response => response.json())
                    .then(data => {
                        if (data.success) {
                            alert('Paciente adicionado com sucesso!');
                            closeAddPatientModal();
                            loadPatients(); // Atualiza a lista
                        } else {
                            alert('Erro: ' + (data.error || 'Erro desconhecido'));
                        }
                    })
                    .catch(error => {
                        console.error('Error:', error);
                        alert('Erro ao registrar atendimento');
                    });
            }

            function viewPatient(pacienteId) {
                // Implemente a visualização detalhada do paciente
                alert('Visualizar paciente ID: ' + pacienteId);
            }

            // Modo Escuro
            const toggleTemaBtn = document.getElementById("toggle-tema");
            toggleTemaBtn.addEventListener("click", () => {
                document.body.classList.toggle("dark-mode");
                localStorage.setItem("modoEscuro", document.body.classList.contains("dark-mode"));
                toggleTemaBtn.textContent = document.body.classList.contains("dark-mode") ? "☀️" : "🌙";
            });

            // Fonte
            let fontSize = 16;
            const aumentarFonteBtn = document.getElementById("aumentar-fonte");
            const diminuirFonteBtn = document.getElementById("diminuir-fonte");

            function ajustarFonte(tamanho) {
                document.querySelectorAll('body, input, button, h1, h2, h3, label, p, textarea, select').forEach(el => {
                    el.style.fontSize = `${tamanho}px`;
                });
            }

            aumentarFonteBtn.addEventListener("click", () => {
                fontSize += 2;
                ajustarFonte(fontSize);
            });

            diminuirFonteBtn.addEventListener("click", () => {
                if (fontSize > 12) {
                    fontSize -= 2;
                    ajustarFonte(fontSize);
                }
            });

            // Ao carregar a página
            window.addEventListener("DOMContentLoaded", () => {
                if (localStorage.getItem("modoEscuro") === "true") {
                    document.body.classList.add("dark-mode");
                    toggleTemaBtn.textContent = "☀️";
                }
            });
        </script>



    </body>

    </html>